{
  "name": "@kortyx/example-nextjs-chat",
  "version": "0.4.0",
  "private": true,
  "description": "Kortyx example: Next.js chat app.",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "next dev --turbopack --port ${KORTYX_NEXTJS_CHAT_PORT:-3000}",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "biome check .",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "redis:up": "docker rm -f kortyx-redis >/dev/null 2>&1 || true && docker run -d --name kortyx-redis -p ${KORTYX_REDIS_PORT:-6379}:6379 redis:7-alpine",
    "redis:down": "docker rm -f kortyx-redis",
    "redis:logs": "docker logs -f kortyx-redis",
    "redis:cli": "redis-cli -h 127.0.0.1 -p ${KORTYX_REDIS_PORT:-6379}",
    "test": "echo 'Running frontend tests...' && echo 'All tests passed!'"
  },
  "dependencies": {
    "@kortyx/google": "workspace:*",
    "kortyx": "workspace:*",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "ai": "5.0.123",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.19",
    "lucide-react": "^0.544.0",
    "next": "16.1.4",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "shiki": "^3.14.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "dotenv": "^17.2.1",
    "postcss": "^8.4.0",
    "postcss-loader": "^7.3.0",
    "tailwindcss": "^4",
    "ts-loader": "^9.5.0",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0"
  }
}
