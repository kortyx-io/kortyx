{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,

    // ðŸš€ Speed-ups
    "skipLibCheck": true, // don't type-check node_modules
    "incremental": true, // faster repeat checks
    "declaration": false, // only needed for publishing libs
    "declarationMap": false,
    "sourceMap": false, // IDE doesn't need source maps
    "removeComments": true, // smaller AST = faster
    "noEmit": true, // IDE doesn't need emit
    "preserveWatchOutput": true, // better watch mode DX

    // âœ… Keep safety features
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "out",
    "coverage",
    "**/.turbo",
    "**/.cache",
    "**/cache",
    "**/*.tsbuildinfo",
    "**/standalone",
    "**/chunks"
  ]
}
