{
  "name": "@kortyx/hooks",
  "version": "0.4.1",
  "private": false,
  "description": "Lifecycle hooks and extension points for Kortyx.",
  "keywords": [
    "ai",
    "agent",
    "agents",
    "orchestration",
    "framework",
    "hooks",
    "kortyx"
  ],
  "license": "Apache-2.0",
  "homepage": "https://kortyx.io/",
  "bugs": {
    "url": "https://github.com/kortyx-io/kortyx/issues"
  },
  "author": "Kortyx (https://github.com/kortyx-io)",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./internal": {
      "types": "./dist/internal.d.ts",
      "default": "./dist/internal.js"
    }
  },
  "files": [
    "dist/**",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "predev": "tsc -p tsconfig.build.json",
    "dev": "tsc --watch",
    "lint": "biome check src",
    "test": "vitest run && pnpm -s type-check",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@kortyx/core": "workspace:*",
    "@kortyx/memory": "workspace:*",
    "@kortyx/providers": "workspace:*",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "typescript": "5.7.2",
    "tsup": "^8.5.1",
    "vitest": "^3.2.4"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/kortyx-io/kortyx.git",
    "directory": "packages/hooks"
  }
}
