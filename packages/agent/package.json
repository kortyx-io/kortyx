{
  "name": "@kortyx/agent",
  "version": "0.5.0",
  "private": false,
  "description": "Agent composition utilities for Kortyx.",
  "keywords": [
    "ai",
    "agent",
    "agents",
    "orchestration",
    "framework",
    "kortyx"
  ],
  "license": "Apache-2.0",
  "homepage": "https://kortyx.io/",
  "bugs": {
    "url": "https://github.com/kortyx-io/kortyx/issues"
  },
  "author": "Kortyx (https://github.com/kortyx-io)",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "default": "./dist/browser.js"
    }
  },
  "files": [
    "dist/**",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "predev": "tsc -p tsconfig.build.json",
    "dev": "tsc --watch",
    "lint": "biome check src",
    "test": "pnpm -s type-check",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@kortyx/core": "workspace:*",
    "@kortyx/memory": "workspace:*",
    "@kortyx/providers": "workspace:*",
    "@kortyx/runtime": "workspace:*",
    "@kortyx/stream": "workspace:*",
    "@kortyx/utils": "workspace:*",
    "@langchain/core": "^1.0.1",
    "@langchain/langgraph": "^1.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "typescript": "5.7.2",
    "tsup": "^8.5.1"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/kortyx-io/kortyx.git",
    "directory": "packages/agent"
  }
}
