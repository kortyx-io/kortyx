    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node16",
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "noEmit": false,
    "composite": true
  },
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../providers"
    },
    {
      "path": "../utils"
    },
    {
      "path": "../stream"
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
