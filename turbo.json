{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "out/**"],
      "env": [],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [],
      "outputs": [],
      "env": [
        "WEBSITE_PORT",
        "KORTYX_NEXTJS_CHAT_PORT",
        "NEXT_PUBLIC_KORTYX_API_URL"
      ]
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build", "^type-check"],
      "outputs": [],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build", "^test"],
      "outputs": [],
      "cache": false
    },
    "start": {
      "dependsOn": ["build"]
    }
  }
}
